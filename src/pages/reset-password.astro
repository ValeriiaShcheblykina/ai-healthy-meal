---
import Layout from '@/layouts/Layout.astro';
import { ResetPasswordForm } from '@/components/auth/ResetPasswordForm';

// Force SSR for this page
export const prerender = false;

// Extract token from URL query parameter
const token = Astro.url.searchParams.get('token');
---

<Layout title="Reset Password - AI Healthy Meal">
  <div class="flex min-h-screen items-center justify-center px-4 py-12">
    <div class="w-full max-w-sm">
      <div class="mb-8 text-center">
        <h1 class="mb-2 text-3xl font-bold">Reset your password</h1>
        <p class="text-muted-foreground">Enter your new password below</p>
      </div>

      <div class="bg-card rounded-lg border p-8 shadow-sm">
        <ResetPasswordForm client:load token={token ?? undefined} />
      </div>
    </div>
  </div>
</Layout>
