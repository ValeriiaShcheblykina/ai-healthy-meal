---
import Layout from '@/layouts/Layout.astro';
import { SignUpForm } from '@/components/auth/SignUpForm';
import { getAuthenticatedUser } from '@/lib/auth/get-authenticated-user';

// Force SSR for this page
export const prerender = false;

// Redirect authenticated users to /recipes
const user = getAuthenticatedUser(Astro);
if (user) {
  return Astro.redirect('/recipes');
}
---

<Layout title="Sign Up - AI Healthy Meal">
  <div class="flex min-h-screen items-center justify-center px-4 py-12">
    <div class="w-full max-w-sm">
      <div class="mb-8 text-center">
        <h1 class="mb-2 text-3xl font-bold">Create your account</h1>
        <p class="text-muted-foreground">
          Start building your healthy meal collection
        </p>
      </div>

      <div class="bg-card rounded-lg border p-8 shadow-sm">
        <SignUpForm client:load />
      </div>

      <p class="text-muted-foreground mt-6 text-center text-sm">
        By signing up, you agree to our Terms of Service and Privacy Policy.
      </p>
    </div>
  </div>
</Layout>
