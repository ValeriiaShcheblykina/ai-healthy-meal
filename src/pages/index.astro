---
import Layout from '@/layouts/Layout.astro';
import { RecipesList } from '@/components/recipes/RecipesList';
import { getAuthenticatedUser } from '@/lib/auth/get-authenticated-user';

export const prerender = false;

// Check if user is authenticated
const user = getAuthenticatedUser(Astro);
---

<Layout>
  <div class="container mx-auto px-4 py-6 sm:px-6 sm:py-8 lg:px-8 lg:py-12">
    {
      user ? (
        <>
          <div class="mb-8">
            <h1 class="mb-2 text-3xl font-bold">Healthy Meal Recipes</h1>
            <p class="text-muted-foreground">
              Discover and manage your collection of healthy recipes
            </p>
          </div>

          <RecipesList client:visible />
        </>
      ) : (
        <div class="flex min-h-[60vh] flex-col items-center justify-center text-center">
          <h1 class="mb-4 text-4xl font-bold lg:text-5xl">
            Welcome to AI Healthy Meal
          </h1>
          <p class="text-muted-foreground text-xl">
            Create, manage, and customize healthy meal recipes tailored to your
            dietary preferences
          </p>
        </div>
      )
    }
  </div>
</Layout>
