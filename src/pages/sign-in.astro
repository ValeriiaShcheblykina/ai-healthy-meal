---
import Layout from '@/layouts/Layout.astro'
import { SignInForm } from '@/components/auth/SignInForm'
import { getAuthenticatedUser } from '@/lib/auth/get-authenticated-user'

// Force SSR for this page
export const prerender = false

// Redirect authenticated users to /recipes
const user = getAuthenticatedUser(Astro)
if (user) {
  return Astro.redirect('/recipes')
}
---

<Layout title="Sign In - AI Healthy Meal">
  <div class="min-h-screen flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-sm">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold mb-2">Welcome back</h1>
        <p class="text-muted-foreground">
          Sign in to access your recipes
        </p>
      </div>

      <div class="bg-card border rounded-lg shadow-sm p-8">
        <SignInForm client:load />
      </div>
    </div>
  </div>
</Layout>

