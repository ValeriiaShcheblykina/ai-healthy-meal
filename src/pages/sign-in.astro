---
import Layout from '@/layouts/Layout.astro';
import { SignInForm } from '@/components/auth/SignInForm';
import { getAuthenticatedUser } from '@/lib/auth/get-authenticated-user';

// Force SSR for this page
export const prerender = false;

// Redirect authenticated users to /recipes
const user = getAuthenticatedUser(Astro);
if (user) {
  return Astro.redirect('/recipes');
}

// Check for success message from sign-up
const isSignUpSuccess = Astro.url.searchParams.get('success') === 'true';
---

<Layout title="Sign In - AI Healthy Meal">
  <div class="flex min-h-screen items-center justify-center px-4 py-12">
    <div class="w-full max-w-sm">
      <div class="mb-8 text-center">
        <h1 class="mb-2 text-3xl font-bold">Welcome back</h1>
        <p class="text-muted-foreground">Sign in to access your recipes</p>
      </div>

      <div class="bg-card rounded-lg border p-8 shadow-sm">
        {
          isSignUpSuccess && (
            <div
              data-testid="signin-success-message"
              class="mb-6 rounded-md border border-green-200 bg-green-50 px-4 py-3 text-green-900 dark:border-green-800 dark:bg-green-950 dark:text-green-100"
              role="status"
            >
              <p class="text-sm font-medium">
                Account created successfully! Please sign in with your
                credentials.
              </p>
            </div>
          )
        }
        <SignInForm client:load />
      </div>
    </div>
  </div>
</Layout>
